{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
      { "handle": "filesystem" },           // serve static files normally
    { "src": "/(.*)", "dest": "/index.html" } // rewrite everything else
  ]
}
